{% extends 'base.html.twig' %}

{% block title %} Gamo'{{user.username}} {% endblock %}

{% block body %}
<div class="container">
    <h1 class="game-title" >{{user.username}}</h1>

    <table class="table border mt-3">
        <tbody>
          
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
        </tbody>
    </table>
    <div class="user d-flex justify-content-around">
        <a class="btn btn-lg btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
        <div class="delete-user">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
